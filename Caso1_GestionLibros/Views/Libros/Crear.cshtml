@model Caso1_GestionLibros.Models.Libros
@{
    <h2>Agregar Nuevo Libro</h2>

    <form asp-action="Crear" method="post">
        <div class="form-group">
            <label>Título</label>
            <input asp-for="Titulo" class="form-control" />
            <span asp-validation-for="Titulo" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Autor</label>
            <input asp-for="Autor" class="form-control" />
            <span asp-validation-for="Autor" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Categoría</label>
            <select asp-for="Categoria" class="form-control">
                <option value="">Selecciona...</option>
                <option value="Programación">Programación</option>
                <option value="Redes">Redes</option>
                <option value="Bases de Datos">Bases de Datos</option>
                <option value="IA">IA</option>
                <option value="Otro">Otro</option>
            </select>
            <span asp-validation-for="Categoria" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Año de Publicación</label>
            <input asp-for="AnioPublicacion" type="number" class="form-control" />
            <span asp-validation-for="AnioPublicacion" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Número de Páginas</label>
            <input asp-for="NumeroPaginas" type="number" class="form-control" />
            <span asp-validation-for="NumeroPaginas" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Código Interno</label>
            <input asp-for="CodigoInterno" class="form-control" />
            <span asp-validation-for="CodigoInterno" class="text-danger"></span>
        </div>

        <div class="form-check">
            <input asp-for="Disponible" type="checkbox" class="form-check-input" />
            <label asp-for="Disponible" class="form-check-label">Disponible</label>
        </div>

        <button type="submit" class="btn btn-primary">Guardar Libro</button>
        <a href="/Libro/Index" class="btn btn-secondary">Cancelar</a>
    </form>






}
